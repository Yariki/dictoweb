{
  "manifest_version": 2,
  "name"            : "Word Service",
  "description"     : "Minimal word translate service",
  "short_name"      : "W_S",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "debugger",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
