{
  "manifest_version": 2,
  "name"            : "Word Service",
  "description"     : "Minimal word translate service",
  "short_name"      : "W_S",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Word Service"
  },
  "content_scripts": [{
    "all_frames": true,
    "matches": ["<all_urls>"],
    "css": ["data/content/content.css"],
    "js":[
      "lib/jquery/jquery-3.2.0.min.js",
      "app/shared/shared.js",
      "app/content/content.js"
    ],
    "run_at" : "document_start"
  }],
  "permissions": [
    "debugger",
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>",
    "contextMenus",
    "notifications",
    "background"
  ]
}
